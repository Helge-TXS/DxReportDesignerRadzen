@inherits LayoutComponentBase

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <RadzenLabel Text="RadzenStart" Style="font-size: 1.25rem; font-weight: 600; margin-left: 8px;" />
        </RadzenStack>
    </RadzenHeader>

    <RadzenSidebar @bind-Expanded="@sidebarExpanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path="/" />
            <RadzenPanelMenuItem Text="Counter" Icon="add_circle" Path="/counter" />
            <RadzenPanelMenuItem Text="Weather" Icon="cloud" Path="/weather" />
            <RadzenPanelMenuItem Text="Report Designer" Icon="description" Path="/reportdesigner" />
        </RadzenPanelMenu>
    </RadzenSidebar>

    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
</RadzenLayout>

<RadzenComponents />

@code {
    bool sidebarExpanded = true;
}
